<h1>User Information</h1>

<p><%= image_tag(@user.userpic) if @user.userpic? %></p>
<p>Name: <%= "#{@user.first_name} #{@user.last_name}" %> </p>
<p>Phone: <%= @user.phone %> </p>
<p>Current Location: <%= @user.location.name %></p>
<p>Skill Level: </p>
<div>
	<% if @user != current_user %>
	<%= form_for :group, :action => 'create', :controller => 'groups_controller', :id => @user.location.id, :method => 'post', :html => {:multipart => true} do |f| %>
		<%= f.hidden_field :location_id, :value => @user.location.id %>
		<%= f.submit "Join" %>
		<% end %>
	<% end %>
</div>

