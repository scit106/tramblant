<!DOCTYPE html>
<html>
<head>
  <title>Tramblant</title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	   <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Skillevel', locations_path, :class => "navbar-brand" %>
        <div class="nav-collapse collapse">
          <ul class="nav navbar-nav">
            <% if @location %>
    	  	<li><%= link_to "#{@location.name}", locations_path %></li>
    	  	<% end %>
	      	<% if user_signed_in? %>
			  <li>
			  	<%= link_to "Welcome, #{current_user.first_name}", locations_path %>
			  </li>
			  <li>
			  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
			  </li>
			<% else %>
			  <li>
			  <%= link_to('User Login', new_user_session_path)  %>  
			  </li>
			  <li>
			  	<%= link_to('Sign Up', new_user_registration_path)  %>  
			  </li>

			<% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <!-- ORIGINAL BELOW -->

<%= yield %>

</body>
</html>
