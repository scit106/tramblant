<!DOCTYPE html>
<html>
<head>
  <title>Tramblant</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
		<div class="navbar-inner">
    	<%= link_to 'Skillevel', locations_path, :class => "brand" %>
    	<ul class="nav">
    		<li><%= link_to 'Home', locations_path %></li>
    	</ul>
    	<ul class="nav pull-right">
    	  <% if @location %>
    	  	<li><%= link_to "#{@location.name}", locations_path %></li>
    	  <% end %>
	      <% if user_signed_in? %>
			  <li>
			  	<%= link_to "Welcome, #{current_user.first_name}", locations_path %>
			  </li>
			  <li>
			  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
			  </li>
			<% else %>
			  <li>
			  <%= link_to('User Login', new_user_session_path)  %>  
			  </li>
			  <li>
			  	<%= link_to('Sign Up', new_user_registration_path)  %>  
			  </li>

			<% end %>
    	</ul>
  		</div>
	</div>

<%= yield %>

</body>
</html>
